# ──────────────────────────────────────────────
# AI Trading Platform — Environment Configuration
# Copy to .env and fill in real values
# ──────────────────────────────────────────────

# ── Application ──
APP_NAME=ai-trading-platform
APP_ENV=development          # development | staging | production
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=DEBUG              # DEBUG | INFO | WARNING | ERROR

# ── Security ──
JWT_SECRET_KEY=CHANGE-ME-TO-A-RANDOM-256-BIT-KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:3000"]

# ── Database (PostgreSQL / TimescaleDB) ──
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trading_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ── Redis ──
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ── Broker APIs ──
BROKER_PROVIDER=paper         # paper | dhan | shoonya | zerodha
DHAN_CLIENT_ID=
DHAN_ACCESS_TOKEN=
SHOONYA_USER_ID=
SHOONYA_PASSWORD=
SHOONYA_API_KEY=
ZERODHA_API_KEY=
ZERODHA_API_SECRET=

# ── LLM APIs ──
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Multiple keys (comma-separated) for rotation (RECOMMENDED)
# Example: key1,key2,key3
ANTHROPIC_API_KEYS=
OPENAI_API_KEYS=
GOOGLE_API_KEYS=

# ── Provider Resilience ──
LLM_ROUTING_STRATEGY=priority_failover   # priority_failover | round_robin | weighted | least_latency
LLM_PROVIDER_PRIORITY=google,anthropic,openai
# Google Model: gemini-3-pro (default in code if not set, can override via metadata if needed)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_COOLDOWN_SECONDS=30.0
ANTHROPIC_RPM=50
OPENAI_RPM=60
GOOGLE_RPM=60
ANTHROPIC_TPM=0          # 0 = unlimited
OPENAI_TPM=0
GOOGLE_TPM=0
PROVIDER_TIMEOUT_SECONDS=60.0
PROVIDER_BACKOFF_BASE=0.5
PROVIDER_BACKOFF_MAX=8.0

# ── Observability ──
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ai-trading-platform
PROMETHEUS_ENABLED=true

# ── Trading Guardrails ──
MAX_ORDER_VALUE_INR=500000
MAX_POSITION_DELTA=100
MAX_ORDERS_PER_MINUTE=10
KILL_SWITCH_DRAWDOWN_PCT=5.0
PAPER_TRADING_MODE=true
